FROM node:24 AS builder
WORKDIR /app
COPY web/package*.json ./
RUN npm install
COPY web/public /app/web/public
COPY web/src /app/web/src
COPY web/*.json /app/web
COPY web/*.js /app/web
RUN npm run build
FROM node:24 AS runner
WORKDIR /app
COPY --from=builder /app/dist ./
EXPOSE 4000
CMD ["node", "app/server/server.mjs"]
